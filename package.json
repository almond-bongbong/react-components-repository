{
  "name": "react-components-repository",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eslint-config-airbnb": "^17.1.0",
    "immer": "^1.12.1",
    "lodash": "^4.17.11",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-app-polyfill": "^0.2.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.3",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "styled-components": "^4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "docz:start": "docz dev",
    "docz:build": "docz build",
    "docz:deploy": "yarn docz:build && echo \"react-compo-repo.surge.sh\" > ./.docz/dist/CNAME && surge ./.docz/dist/"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "rules": {
      "react/jsx-filename-extension": 0,
      "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["draft"] }],
      "no-underscore-dangle": ["error", { "allow": ["__REDUX_DEVTOOLS_EXTENSION__", "__REDUX_DEVTOOLS_EXTENSION_COMPOSE__"] }]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "resolutions": {
    "ansi-styles": "^3.2.0"
  },
  "devDependencies": {
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7"
  }
}
